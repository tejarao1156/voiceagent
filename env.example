# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/voiceagent
REDIS_URL=redis://localhost:6379

# MongoDB Configuration (for conversation storage)
MONGODB_URL=mongodb+srv://username:password@cluster.mongodb.net/
MONGODB_DATABASE=voiceagent
MONGODB_CONVERSATIONS_COLLECTION=conversations
# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# ElevenLabs Configuration (for human-like TTS/STT)
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# Hugging Face Configuration
HUGGINGFACE_API_KEY=your_huggingface_api_key_here
HF_TOKEN=your_hf_token_here

# Voice Processing Configuration
VOICE_MODEL=whisper-1
TTS_MODEL=tts-1
INFERENCE_MODEL=gpt-4o

# ============================================================================
# API CONFIGURATION
# ============================================================================
API_HOST=0.0.0.0
API_PORT=4002
DEBUG=False
RELOAD=True

# ============================================================================
# TWILIO CONFIGURATION (for phone integration)
# ============================================================================
# NOTE: Twilio credentials MUST be registered through the app UI.
# DO NOT set TWILIO_ACCOUNT_SID, TWILIO_AUTH_TOKEN, or TWILIO_PHONE_NUMBER here.
# All credentials are stored in MongoDB via the "Register Phone Number" feature.
# The system will ONLY pull credentials from MongoDB, not from .env file.
TWILIO_WEBHOOK_BASE_URL=https://your-domain.com
# Note: For local development, use ngrok: ngrok http 4002
# Then set TWILIO_WEBHOOK_BASE_URL=https://your-ngrok-url.ngrok.io

# Twilio Processing Mode ("batch" or "stream")
# "batch": Reliable, higher-latency. Uses <Record>.
# "stream": Low-latency, real-time. Uses Media Streams.
TWILIO_PROCESSING_MODE=batch

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================

# Security
SECRET_KEY=your_secret_key_here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
