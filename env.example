# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/voiceagent
REDIS_URL=redis://localhost:6379

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Voice Processing Configuration
VOICE_MODEL=whisper-1
TTS_MODEL=tts-1

# Restaurant Configuration
RESTAURANT_NAME=VoiceOrder Restaurant
RESTAURANT_PHONE=+1-555-0123

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=True

# Twilio Configuration (for phone integration)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_WEBHOOK_URL=https://your-domain.com/webhooks/twilio

# Security
SECRET_KEY=your_secret_key_here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
